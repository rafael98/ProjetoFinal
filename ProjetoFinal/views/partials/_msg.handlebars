<!-- Mostrar mensagens no cadastro de aromas  -->

<!-- Mensagem de sucesso: "Aroma adicionado com sucesso!"  -->
    {{#if success_msg}}
        <div class="alert alert-success">{{success_msg}}</div>
    {{/if}}

<!-- Mensagem de sucesso: "Houve um erro, tente novamente!"  -->
    {{#if error_msg}}
        <div class="alert alert-danger"> {{error_msg}}</div>
    {{/if}}
