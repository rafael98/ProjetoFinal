<!--Print do erros da validação do formulário : editar aromas  -->
{{#each erros}}
    <div class="alert alert-danger"> {{texto}} </div>
{{else}}

{{/each}}

<!-- Formulário para editar aroma -->
<h5> Alterar Aroma:</h5>
<div class="card">
  <div class="card-body">

    <form action="/admin/aromas/alterar" method="POST">
      <!-- validando a editação dos aromas cadastrados -->
      <input type="hidden" name="id" value="{{aroma._id}}"
      <label for="nome"> Nome: </label> <br>
      <input type="text" id="nome" name="nome" placeholder="Nome do Aroma" class="form-control" value="{{aroma.nome}}"><br><br>
      <button type="submit" class="btn btn-secondary"> Alterar Aroma </button>
    </form>
  </div>
</div>
