<!--Print do erro da validação do formulário : Adicionar Produto  -->
{{#each erros}}
    <div class="alert alert-danger"> {{texto}} </div>
{{else}}
{{/each}}


<!-- Formulário para adicionar produto, localizado: http://localhost:8083/admin/produtos -->
<h5> Novo Produto:</h5>
<div class="card">
    <div class="card-body">

        <form action="/admin/produtos/novo" method="POST">
            <label for="nome"> Nome: </label> <br>
            <input type="text" name="nome" placeholder="Nome do Produto" class="form-control" required ><br>

            <label for="aroma"> Aroma: </label> <br>
                <!-- Busca os aromas cadastrados no banco de dados, e listar elas dentro do formulário dos produtos -->
                <select name="aroma" class="custom-select" >
                    {{#each aromas}}
                        <option value="{{_id}}">{{nome}} </option>
                    {{else}}
                        <option value="0" > Nenhum aroma cadastrado </option>
                    {{/each}}
                </select>
    
            <label for="quantidade"> Quantidade: </label> <br>
            <input type="number" name="quantidade" placeholder="Ex: 10"class="form-control" required><br>

            <label for="datacompra"> Data da Compra: </label> <br>
            <input type="date" name="datacompra" class="form-control" required >

            <button type="submit" class="btn btn-secondary mt-4"> Cadastrar Produto </button>
        </form>
    </div>
</div>