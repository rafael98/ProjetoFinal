<!--Print do erro da validação do formulário : Adicionar Produto  -->
{{#each erros}}
    <div class="alert alert-danger"> {{texto}} </div>
{{else}}
{{/each}}


<!-- Formulário para adicionar aroma -->
<h5> Editar Produto:</h5>
<div class="card">
    <div class="card-body">

        <form action="/admin/produtos/alterar" method="POST">
            <input type="hidden" value="{{produto._id}}" name ="id">
            <label for="nome"> Nome: </label> <br>
            <input type="text" name="nome" placeholder="Nome do Produto" class="form-control" value="{{produto.nome}}" required ><br>

            <label for="aroma"> Aroma: </label> <br>
                <!-- Busca os aromas cadastrados no banco de dados, e listar elas no formulário dos produtos -->
                <select name="aroma" class="custom-select" >
                    {{#each aromas}}
                        <option value="{{_id}}">{{nome}} </option>
                    {{else}}
                        <option value="0" > Nenhum aroma cadastrado </option>
                    {{/each}}
                </select>
    
            <label for="quantidade"> Quantidade: </label> <br>
            <input type="number" name="quantidade" placeholder="Ex: 10"class="form-control" value="{{produto.quantidade}}" required><br>

            <label for="datacompra"> Data da Compra: </label> <br>
            <input type="ISOdate" name="datacompra" class="form-control" value="{{produto.datacompra}}" required >

            <button type="submit" class="btn btn-secondary mt-4"> Editar Produto </button>
        </form>
    </div>
</div>