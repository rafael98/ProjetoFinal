<!--Print do erros da validação do formulário : adicionar aromas  -->
{{#each erros}}
    <div class="alert alert-danger"> {{texto}} </div>
{{else}}
{{/each}}

<!-- Formulário para adicionar aroma, localizado: http://localhost:8083/admin/aromas  -->
<h5> Novo Arroma:</h5>
<div class="card">
  <div class="card-body">

    <form action="/admin/aromas/novo" method="POST">
      <label for="nome"> Nome: </label> <br>
      <input type="text" id="nome" name="nome" placeholder="Nome do Aroma" class="form-control" required ><br>
      <button type="submit" class="btn btn-secondary"> Cadastrar Aroma </button>
    </form>
  </div>
</div>
